<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.home.HomeFragment">


    <soup.neumorphism.NeumorphCardView
        android:id="@+id/item_summary_neumorphic_card"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowElevation="4dp"
        app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
        app:neumorph_shapeType="flat">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_month_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:text="May"
                android:textColor="@color/md_theme_light_onSecondaryContainer"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_inflow_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="N500"
                android:textColor="@color/pigment_green"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/materialDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_inflow_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Inflow"
                android:textColor="@color/pigment_green"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="@id/tv_inflow_amount"
                app:layout_constraintStart_toStartOf="@id/tv_inflow_amount"
                app:layout_constraintTop_toBottomOf="@id/tv_inflow_amount" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/pgBar_inflowAmount"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/materialDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                android:indeterminate="true"
                android:indeterminateBehavior="repeat"
                app:indicatorColor="@color/pigment_green"
                android:visibility="visible"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/materialDivider"
                android:layout_width="0.6dp"

                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="10dp" />

            <TextView
                android:id="@+id/tv_outflow_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="N300"
                android:textColor="@color/syracuse_red_orange"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/materialDivider"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_outflow_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Outflow"
                android:textColor="@color/syracuse_red_orange"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="@id/tv_outflow_amount"
                app:layout_constraintStart_toStartOf="@id/tv_outflow_amount"
                app:layout_constraintTop_toBottomOf="@id/tv_outflow_amount" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/pgBar_outflowAmount"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/materialDivider"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                android:indeterminate="true"
                android:indeterminateBehavior="repeat"
                app:indicatorColor="@color/syracuse_red_orange"
                android:visibility="visible"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </soup.neumorphism.NeumorphCardView>


    <soup.neumorphism.NeumorphCardView
        android:id="@+id/card_transactions"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card_visualizer"
        app:layout_constraintTop_toBottomOf="@id/item_summary_neumorphic_card"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowElevation="4dp"
        app:neumorph_shapeAppearance="@style/CustomShapeAppearance">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_transaction"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_repeatMode="reverse"
            app:lottie_fileName="ic_calculate.json" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:textSize="13sp"
            android:text="Transactions" />
    </soup.neumorphism.NeumorphCardView>


    <soup.neumorphism.NeumorphCardView
        android:id="@+id/card_visualizer"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/card_transactions"
        app:layout_constraintTop_toTopOf="@+id/card_transactions"
        app:neumorph_shapeAppearance="@style/CustomShapeAppearance">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_visualizer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_repeatMode="reverse"
            app:lottie_fileName="ic_analytics.json" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:textSize="13sp"
            android:text="Visualizer" />
    </soup.neumorphism.NeumorphCardView>


    <soup.neumorphism.NeumorphCardView
        android:id="@+id/card_budget"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/card_tasks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_transactions"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowElevation="4dp"
        app:neumorph_shapeAppearance="@style/CustomShapeAppearance">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_budget"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_fileName="ic_piggy.json"
            app:lottie_loop="true"
            app:lottie_repeatMode="reverse" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:text="Budget"
            android:textSize="13sp" />
    </soup.neumorphism.NeumorphCardView>


    <soup.neumorphism.NeumorphCardView
        android:id="@+id/card_tasks"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="@id/card_budget"
        app:layout_constraintBottom_toBottomOf="@id/card_budget"
        app:layout_constraintStart_toEndOf="@id/card_budget"
        app:layout_constraintEnd_toEndOf="parent"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowElevation="4dp"
        app:neumorph_shapeAppearance="@style/CustomShapeAppearance">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_tasks"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_repeatMode="reverse"
            app:lottie_fileName="ic_add.json" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:textSize="13sp"
            android:text="Tasks" />
    </soup.neumorphism.NeumorphCardView>


    <soup.neumorphism.NeumorphCardView
        android:id="@+id/card_settings"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/card_add_entry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_budget"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowElevation="4dp"
        app:neumorph_shapeAppearance="@style/CustomShapeAppearance">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_fileName="ic_settings.json"
            app:lottie_loop="true"
            app:lottie_repeatMode="reverse" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:text="Settings"
            android:textSize="13sp" />
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/card_add_entry"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="@id/card_settings"
        app:layout_constraintBottom_toBottomOf="@id/card_settings"
        app:layout_constraintStart_toEndOf="@id/card_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:neumorph_lightSource="leftTop"
        app:neumorph_shadowElevation="4dp"
        app:neumorph_shapeAppearance="@style/CustomShapeAppearance">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_add_entry"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_repeatMode="reverse"
            app:lottie_fileName="ic_add.json" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:textSize="13sp"
            android:text="Add Entry" />
    </soup.neumorphism.NeumorphCardView>

</androidx.constraintlayout.widget.ConstraintLayout>